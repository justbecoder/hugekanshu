/* pages/search/search.wxss */
.search-result {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}
.search-wrap {
  width: 100%;
  display: flex;
  align-items: center;
  height: 60rpx;
  justify-content: center;
  position: relative;
  /* background: #FFF; */
}
.search {
  border: 2rpx solid #ccc;
  border-radius: 60rpx;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  position: relative;
  align-items: center;
  color: #666;
  font-size: 24rpx;
  padding-left: 20rpx;
  padding-right: 80rpx;
  display: block;
}
.search-btn {
  position: absolute;
  width: 80rpx;
  height: 60rpx;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}
.search-btn::before {
  width: 24rpx;
  height: 24rpx;
  content: "";
  border: 2rpx solid #ccc;
  display: block;
  border-radius: 100%;
  right: 14rpx;
  position: absolute;
  z-index: 2;
  background: #FFF
}
.search-btn::after {
  width: 30rpx;
  height: 2rpx;
  content: "";
  display: block;
  position: absolute;
  right: 0rpx;
  top: 24rpx;
  background: #ccc;
  transform-origin: 0 0;
  transform: rotate(30deg)
}
.books-wrap {
  margin-top: 40rpx;
}
.books-title {
  width: 124rpx;
  padding-bottom: 10rpx;
  border-bottom: 1px solid #ccc;
}
.books-wrap .list {
  width: 100%;
  margin-top: 20rpx;
}
.books-wrap .list .item {
  width: 100%;
  /* height: 300rpx; */
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #ededed;
  box-sizing: border-box;
}
.books-wrap .item-link {
  width: 100%;
  height: 100%;
  display: flex;
  /* flex-wrap: wrap; */
  /* justify-content: space-around; */
}
.books-wrap .item-link-img-wrap {
  width: 220rpx;
  min-width: 220rpx;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.books-wrap .item-link-img {
  width: 100%;
  height: 100%;
  display: block;
}
.item-link .item-link-intro {
  flex-grow: 1;
  margin-left: 20rpx;
  font-size: 32rpx;
  color: #333;
}
.books-wrap .item-link .item-link-intro-brief {
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #666;
}
.item-link-intro-author {
  margin-top: 10rpx;
  font-size: 28rpx;
}
.list-none {
  color: #666;
  font-size: 28rpx;
  margin-top: 20rpx;
}
