/* pages/bookStore/bookStore.wxss */
.tabbar {
  display: flex;
  height: 80rpx;
  align-items: center;
}
.tabbar .tab {
  flex-grow: 1;
  height: 100%;
  width: 50%;
  border-bottom: 2rpx solid #ededed;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tabbar .tab.active {
  border-bottom-color: #f00;
}

.book-store {
  /* padding: 0 40rpx; */
  box-sizing: border-box;
}
.book-store .list {
  width: 100%;
  display: flex;
  /* justify-content: space-between; */
  flex-wrap: wrap;
  padding: 0 15rpx;
  /* margin-top: 20rpx; */
}
.book-store .list .item {
  width: 200rpx;
  height: 280rpx;
  margin-left: 37.5rpx;
  margin-top: 30px;
}
.book-store .item-link {
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.book-store .item-link-img-wrap {
  width: 100%;
  height: 220rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.book-store .item-link-img {
  width: 160rpx;
  height: 220rpx;
  display: block;
}
.book-store .item-link .item-link-text {
  font-size: 32rpx;
  color: #333;
}